#   /homeassistant/.gitignore
# Example .gitignore file for your config dir.
# An * ensures that everything will be ignored.
# Ignore everything
*

# You can whitelist files/folders with !, these will not be ignored.
!README

!*.yaml
!.gitignore
!*.md
!*/*.yaml
!*.sh
!*.js*

!includes/

#Comment these 2 lines if you don't want to include your SSH keys
.ssh/
id_rsa*

#Uncomment this if you don' want to include secrets.yaml 
secrets.yaml

# Ignore folders.
.storage
.cloud
.google.token

# Ensure these YAML files are ignored, otherwise your secret data/credentials will leak.
ip_bans.yaml
known_devices.yaml
zone.yaml

# Logs
logs
*.log



/homeassistant/.git/config

[core]
	repositoryformatversion = 0
	filemode = true
	bare = false
	logallrefupdates = true
	sshCommand = ssh -i /config/.ssh/id_rsa -F /dev/null
[remote "origin"]
	url = git@github.com:username/reponame.git
	fetch = +refs/heads/*:refs/remotes/origin/*
[branch "main"]
	remote = origin
	merge = refs/heads/main



